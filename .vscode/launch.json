    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Falcon - Generate Sequence ",
            "type": "python",
            "request": "launch",
            "program": "falcon_main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--script",
                "generate-example-sequence"
            ]
        },
        {
            "name": "Falcon - Run Train",
            "type": "python",
            "request": "launch",
            "program": "falcon_main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--script",
                "train"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "1,2,3",
            }
        },
        {
            "name": "Falcon - Run Inference on Fintuned",
            "type": "python",
            "request": "launch",
            "program": "falcon_main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--script",
                "inference-finetuned"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "1,2,3",
            }
        }        
    ]
}